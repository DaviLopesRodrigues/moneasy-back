generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  incomes   Income[]

  @@map("users")
}

model Income {
  id          String   @id @default(uuid())
  date        DateTime
  description String
  category    String
  value       Decimal  @db.Decimal(10, 2)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("incomes")
}
